String fullName = '';
Boolean hasFirst = !String.isBlank(firstName);
Boolean hasLast = !String.isBlank(lastName);
if(hasFirst && hasLast){
    fullName = lastName+', '+firstName;
}else if(hasFirst){
    fullName = firstName;
}
else if(hasLast){
    fullName = lastName;
}
return fullName;
}